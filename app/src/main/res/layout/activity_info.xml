<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    tools:context="fhkufstein.ac.at.ernestorun.InfoActivity">


    <ImageButton
        android:id="@+id/good"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="54dp"
        android:background="@drawable/info_good"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/bad"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/good"
        android:layout_centerHorizontal="true"
        android:background="@drawable/info_bad" />

    <ImageButton
        android:id="@+id/end"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bad"
        android:layout_marginEnd="49dp"
        android:background="@drawable/info_endgame" />


</RelativeLayout>
